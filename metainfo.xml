<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>TRINO_QUERY1</name>
            <displayName>TRINO_QUERY1</displayName>
            <version>358</version>
            <!--            <quickLinksConfigurations>-->
            <!--                <quickLinksConfiguration>-->
            <!--                    <fileName>quicklinks.json</fileName>-->
            <!--                    <default>true</default>-->
            <!--                </quickLinksConfiguration>-->
            <!--            </quickLinksConfigurations>-->
            <components>
                <component>
                    <name>TRINO_QUERY1_COORDINATOR</name>
                    <displayName>TRINO_QUERY1_COORDINATOR</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/trino_coordinator.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>60</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>TRINO_QUERY1_WORKER</name>
                    <displayName>TRINO_QUERY1_WORKER</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <recovery_enabled>true</recovery_enabled>
                    <commandScript>
                        <script>scripts/trino_worker.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>

                <component>
                    <name>TRINO_QUERY1_CLI</name>
                    <displayName>TRINO_QUERY1_CLI</displayName>
                    <category>CLIENT</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/trino_cli.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>
            </components>

            <configuration-dependencies>
                <config-type>config.properties.query1</config-type>
                <config-type>connectors.properties.query1</config-type>
                <config-type>jvm.config.query1</config-type>
                <config-type>node.properties.query1</config-type>
            </configuration-dependencies>


        </service>
    </services>
</metainfo>
